<?xml version="1.0" encoding="utf-8"?>
<com.brandonhogan.liftscout.core.controls.BaseFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fragment_default_padding"
    android:background="?android:windowBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_display_theme_spinner_title"
            android:layout_marginBottom="@dimen/fragment_default_xsmall_margin"
            android:textColor="?attr/android:textColorPrimary"
            style="@style/RobotoSubheading" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_display_theme_spinner_description"
            android:layout_marginBottom="@dimen/fragment_default_small_margin"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/material_text_size_small" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/themeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_text_color="?android:textColorSecondary"
            app:ms_background_color="?attr/android:fillColor"/>

    </LinearLayout>
</com.brandonhogan.liftscout.core.controls.BaseFrameLayout>