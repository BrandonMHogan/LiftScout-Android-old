<?xml version="1.0" encoding="utf-8"?>
<com.brandonhogan.liftscout.core.controls.BaseFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fragment_default_padding">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_home_default_spinner_title"
                    android:layout_marginBottom="@dimen/fragment_default_xsmall_margin"
                    android:textColor="?attr/android:textColorPrimary"
                    style="@style/RobotoSubheading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_home_default_spinner_description"
                    android:layout_marginBottom="@dimen/fragment_default_small_margin"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="@dimen/material_text_size_small" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/homeDefaultSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_text_color="?android:textColorSecondary"
                    app:ms_background_color="?attr/android:fillColor"/>

            </LinearLayout>

            <View android:layout_width="match_parent"
                android:background="?attr/android:fillColor"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="@dimen/settings_divider_view_hieght"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="100dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_today_transformer_spinner_title"
                    android:layout_marginBottom="@dimen/fragment_default_xsmall_margin"
                    android:textColor="?attr/android:textColorPrimary"
                    style="@style/RobotoSubheading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_today_transformer_spinner_description"
                    android:layout_marginBottom="@dimen/fragment_default_small_margin"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="@dimen/material_text_size_small" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/todayTransformSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_text_color="?android:textColorSecondary"
                    app:ms_background_color="?attr/android:fillColor"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</com.brandonhogan.liftscout.core.controls.BaseFrameLayout>
