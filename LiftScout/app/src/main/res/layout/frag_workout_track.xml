<?xml version="1.0" encoding="utf-8"?>
<com.brandonhogan.liftscout.core.controls.BaseFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:windowBackground" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <com.brandonhogan.liftscout.core.controls.NumberPicker
            android:id="@+id/rep_number_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="5dp"
            app:backGroundColor="@color/colorPrimary"
            app:textSize="7sp"
            app:textColor="@color/white"
            app:maxValue="9999"
            app:increment="1"
            app:allowDecimal="true"/>

        <com.brandonhogan.liftscout.core.controls.NumberPicker
            android:id="@+id/weight_number_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="4dp"
            app:backGroundColor="@color/colorPrimary"
            app:textSize="7sp"
            app:textColor="@color/white"
            app:increment="1"
            app:maxValue="999"/>

    </LinearLayout>

</com.brandonhogan.liftscout.core.controls.BaseFrameLayout>