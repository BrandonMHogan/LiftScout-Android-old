<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/today_workout_item_height"
    android:orientation="horizontal"
    android:padding="@dimen/card_view_padding"
    android:gravity="center"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:id="@+id/rep_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView android:id="@+id/item_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/material_text_size_menu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="@dimen/material_text_size_caption"
                android:text="@string/reps"/>

        </LinearLayout>

        <TextView android:id="@+id/item_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/material_text_size_menu"/>

        <TextView
            android:id="@+id/item_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="@dimen/material_text_size_caption"
            android:text="@string/lbs"/>


    </LinearLayout>

    <TextView android:id="@+id/no_rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="@dimen/material_text_size_menu"/>

</RelativeLayout>