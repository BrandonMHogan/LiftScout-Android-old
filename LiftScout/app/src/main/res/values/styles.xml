    <style name="Theme.Intro.Mine" parent="Theme.Intro">
        <item name="ms_background_color">@color/fillColor</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SupportButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="RobotoButton" parent="SupportButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/material_text_size_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:height">@dimen/btn_height</item>
        <item name="android:paddingLeft">@dimen/btn_padding_left</item>
        <item name="android:paddingRight">@dimen/btn_padding_right</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <!-- Logos -->
    <style name="Logo_Scout">
        <item name="android:alpha">1.0</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/ic_icon_grey</item>
    </style>


    <style name="RobotoDisplay01">
        <item name="android:fontFamily">sans-serif</item>
