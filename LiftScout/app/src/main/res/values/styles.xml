<resources>

    <!-- Light Theme Base-->
    <style name="AppTheme.Light.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse</item>
        <item name="android:windowBackground">@color/activity_background_light</item>

        <item name="themedMenuHomeDrawable">@drawable/ic_menu_home_black</item>
        <item name="themedMenuCalendarDrawable">@drawable/ic_menu_calendar_black</item>
        <item name="themedMenuExerciseDrawable">@drawable/ic_menu_dumbbell_black</item>
        <item name="themedMenuRoutineDrawable">@drawable/ic_menu_routine_black</item>
        <item name="themedMenuGraphsDrawable">@drawable/ic_menu_bar_chart_black</item>
        <item name="themedMenuSettingsDrawable">@drawable/ic_menu_settings_black</item>
        <item name="themedMenuAboutDrawable">@drawable/ic_menu_camera</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="AppTheme.Light.Base">
    </style>

    <style name="AppTheme.Dark.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryInverse</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverse</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimary</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondary</item>
        <item name="android:windowBackground">@color/activity_background_dark</item>

        <item name="themedMenuHomeDrawable">@drawable/ic_menu_home_white</item>
        <item name="themedMenuCalendarDrawable">@drawable/ic_menu_calendar_white</item>
        <item name="themedMenuExerciseDrawable">@drawable/ic_menu_dumbbell_white</item>
        <item name="themedMenuRoutineDrawable">@drawable/ic_menu_routine_white</item>
        <item name="themedMenuGraphsDrawable">@drawable/ic_menu_bar_chart_white</item>
        <item name="themedMenuSettingsDrawable">@drawable/ic_menu_settings_white</item>
        <item name="themedMenuAboutDrawable">@drawable/ic_menu_info_white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme.Dark" parent="AppTheme.Dark.Base">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SupportButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="RobotoButton" parent="SupportButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/material_text_size_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:height">@dimen/btn_height</item>
        <item name="android:paddingLeft">@dimen/btn_padding_left</item>
        <item name="android:paddingRight">@dimen/btn_padding_right</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_margin">3dp</item>
    </style>

</resources>
