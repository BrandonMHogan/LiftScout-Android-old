<resources>

    <!-- Light Theme Base-->
    <style name="AppTheme.Light.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse</item>
        <item name="android:windowBackground">@color/activity_background_light</item>
        <item name="android:fillColor">@color/fillColor</item>

        <item name="themedMenuHomeDrawable">@drawable/ic_menu_home_black</item>
        <item name="themedMenuCalendarDrawable">@drawable/ic_menu_calendar_black</item>
        <item name="themedMenuExerciseDrawable">@drawable/ic_menu_dumbbell_black</item>
        <item name="themedMenuRoutineDrawable">@drawable/ic_menu_routine_black</item>
        <item name="themedMenuGraphsDrawable">@drawable/ic_menu_bar_chart_black</item>
        <item name="themedMenuSettingsDrawable">@drawable/ic_menu_settings_black</item>
        <item name="themedMenuAboutDrawable">@drawable/ic_menu_camera</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="AppTheme.Light.Base">
    </style>

    <style name="AppTheme.Dark.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryInverse</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverse</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimary</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondary</item>
        <item name="android:windowBackground">@color/activity_background_dark</item>
        <item name="android:fillColor">@color/fillColorInverse</item>

        <item name="themedMenuHomeDrawable">@drawable/ic_menu_home_white</item>
        <item name="themedMenuCalendarDrawable">@drawable/ic_menu_calendar_white</item>
        <item name="themedMenuExerciseDrawable">@drawable/ic_menu_dumbbell_white</item>
        <item name="themedMenuRoutineDrawable">@drawable/ic_menu_routine_white</item>
        <item name="themedMenuGraphsDrawable">@drawable/ic_menu_bar_chart_white</item>
        <item name="themedMenuSettingsDrawable">@drawable/ic_menu_settings_white</item>
        <item name="themedMenuAboutDrawable">@drawable/ic_menu_info_white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="AppTheme.Dark.Base">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SupportButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="RobotoButton" parent="SupportButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/material_text_size_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:height">@dimen/btn_height</item>
        <item name="android:paddingLeft">@dimen/btn_padding_left</item>
        <item name="android:paddingRight">@dimen/btn_padding_right</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <!-- Logos -->
    <style name="Logo_Scout">
        <item name="android:alpha">1.0</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/ic_scout_orange</item>
    </style>


    <style name="RobotoDisplay01">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/material_text_size_display_1</item>
    </style>

    <style name="RobotoDisplay02">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/material_text_size_display_2</item>
    </style>

    <style name="RobotoDisplay03">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/material_text_size_display_3</item>
    </style>

    <style name="RobotoDisplay04">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/material_text_size_display_4</item>
    </style>

    <style name="RobotoHeadline">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/material_text_size_headline</item>
    </style>

    <style name="RobotoTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/material_text_size_title</item>
    </style>

    <style name="RobotoSubheading">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/material_text_size_subhead</item>
    </style>

    <style name="RobotoSubheadingBold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/material_text_size_subhead</item>
    </style>

    <style name="RobotoBody01">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/material_text_size_body_1</item>
    </style>

    <style name="RobotoBody02">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/material_text_size_body_2</item>
    </style>

    <style name="RobotoCaption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/material_text_size_caption</item>
    </style>

    <style name="RobotoCaptionBold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/material_text_size_caption</item>
    </style>

    <style name="ModalContentText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/modal_text_size</item>
    </style>

    <style name="SaveButton" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/background_round_corner</item>
        <item name="colorControlHighlight">@color/green_transparent_75</item>
        <item name="colorButtonNormal">@color/blue</item>
    </style>

</resources>
