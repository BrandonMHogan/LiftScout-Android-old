<resources>

    <!-- This is the base of all dark themes. All dark base themes need to be a child of this -->
    <style name="AppTheme.Dark.Base" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/dark_theme_background</item>
        <item name="android:popupBackground">@color/dark_theme_background</item>
        <item name="android:itemBackground">@color/dark_theme_background</item>

        <!-- Custom Attributes -->
        <item name="colorFill">@color/dark_theme_fill</item>
        <item name="colorFillSecondary">@color/dark_theme_fill_secondary</item>
        <item name="bottomNavFillColor">@color/dark_theme_bottom_nav_fill</item>

        <!-- Used for the workout section and items -->
        <item name="sectionBackground">@drawable/section_background_dark</item>
        <item name="itemBackground">@drawable/section_item_background_dark</item>

        <!-- Used for buttons, so that we can apply ripple on v21+ -->
        <item name="primaryButtonBackground">@drawable/primary_button_background_dark</item>


        <item name="android:textColorPrimary">@color/dark_theme_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_theme_text_secondary</item>
        <item name="themedMenuHomeDrawable">@drawable/ic_view_carousel_white_36dp</item>
        <item name="themedMenuCalendarDrawable">@drawable/ic_date_range_white_48dp</item>
        <item name="themedMenuExerciseDrawable">@drawable/ic_menu_dumbbell_white</item>
        <item name="themedMenuRoutineDrawable">@drawable/ic_menu_routine_white</item>
        <item name="themedMenuGraphsDrawable">@drawable/ic_menu_bar_chart_white</item>
        <item name="themedMenuSettingsDrawable">@drawable/ic_menu_settings_white</item>
        <item name="themedMenuAboutDrawable">@drawable/ic_menu_info_white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- This is the base of all light themes. All light base themes need to be a child of this -->
    <style name="AppTheme.Light.Base" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/light_theme_background</item>
        <item name="android:popupBackground">@color/light_theme_background</item>
        <item name="android:itemBackground">@color/light_theme_background</item>

        <!-- Custom Attributes -->
        <item name="colorFill">@color/light_theme_fill</item>
        <item name="colorFillSecondary">@color/light_theme_fill_secondary</item>
        <item name="bottomNavFillColor">@color/light_theme_bottom_nav_fill</item>

        <!-- Used for the workout section and items -->
        <item name="sectionBackground">@drawable/section_background_light</item>
        <item name="itemBackground">@drawable/section_item_background_light</item>

        <!-- Used for buttons, so that we can apply ripple on v21+ -->
        <item name="primaryButtonBackground">@drawable/primary_button_background_light</item>

        <item name="android:textColor">@color/light_theme_text_primary</item>
        <item name="android:textColorPrimary">@color/light_theme_text_primary</item>
        <item name="android:textColorSecondary">@color/light_theme_text_secondary</item>
        <!--<item name="android:textColorPrimaryDisableOnly">@color/light_theme_text_disabled</item>-->

        <item name="themedMenuHomeDrawable">@drawable/ic_view_carousel_white_36dp</item>
        <item name="themedMenuCalendarDrawable">@drawable/ic_date_range_white_48dp</item>
        <item name="themedMenuExerciseDrawable">@drawable/ic_menu_dumbbell_black</item>
        <item name="themedMenuRoutineDrawable">@drawable/ic_menu_routine_black</item>
        <item name="themedMenuGraphsDrawable">@drawable/ic_menu_bar_chart_black</item>
        <item name="themedMenuSettingsDrawable">@drawable/ic_menu_settings_black</item>
        <item name="themedMenuAboutDrawable">@drawable/ic_menu_info_black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


